{
  "name": "homelab-dash",
  "version": "1.0.0",
  "description": "Self-hosted, grid-based homelab dashboard with tabs, design mode, theming, and RBAC",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "build:frontend": "cd frontend && bun run build",
    "build:backend": "cd backend && bun run build",
    "build": "bun run build:backend && bun run build:frontend",
    "start": "cd backend && bun run start"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  },
  "dependencies": {
    "@angular/animations": "^21.0.3",
    "@fortawesome/angular-fontawesome": "^4.0.0",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "masonry-layout": "^4.2.2",
    "ngx-masonry": "^14.0.1"
  }
}
