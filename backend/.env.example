# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./dash.db

# JWT Configuration
# IMPORTANT: Generate a strong random secret for production!
# Example: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Example: http://localhost:4200,https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3350

# Default Admin User (for initial database seeding)
# If you lose the password, just re-run the seed script or re-deploy!
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_DISPLAY_NAME=Administrator

# External APIs
PEXELS_API_KEY=your-pexels-api-key

# Upload Configuration
UPLOAD_MAX_SIZE=10485760
